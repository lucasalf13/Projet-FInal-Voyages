{% block style %}
	<link rel="stylesheet" href="/assets/css/style.css"/>
{% endblock %}

<header class="header-banner {{ headerClass }}">
	<img src="/assets/img/head.jpg" alt="{{ t('banner_alt') }}" class="header-illustration">
	{% if slogan %}
		<h1 class="hero-slogan">{{ slogan }}</h1>
	{% endif %}
	<nav class="header-nav-flex">
		<button class="burger" aria-label="{{ t('menu') }}">&#9776;</button>

		{# Menu mobile #}
		<ul class="nav-mobile">
			{% if user %}
				<li class="bienvenue">
					{{ t('welcome') }}
					{{ user.firstName }}
					!
				</li>
				<li>
					<a href="/home">{{ t('home') }}
						⌂</a>
				</li>
				<li>
					<a href="/favori">{{ t('favorites') }}
						❤️</a>
				</li>
				<li>
					<a href="/forum">{{ t('forum') }}
						💬</a>
				</li>
				<li>
					<a href="/about">{{ t('about') }}
						ℹ️</a>
				</li>
				<li>
					<a href="/logout">{{ t('logout') }}
						⏻</a>
				</li>
			{% else %}
				<li>
					<a href="/register">{{ t('register') }}
					</a>
				</li>
				<li>
					<a href="/login">{{ t('login') }}
					</a>
				</li>
				<li>
					<a href="/about">{{ t('about') }}
						ℹ️</a>
				</li>
			{% endif %}
		</ul>

		{# Menus desktop classiques #}
		{% if user %}
			<ul class="nav-left">
				<li class="bienvenue">
					{{ t('welcome') }}
					{{ user.firstName }}
					!
				</li>
			</ul>
			<ul class="nav-right">
				<li>
					<a href="/home">{{ t('home') }}
						⌂</a>
				</li>
				<li>
					<a href="/favori">{{ t('favorites') }}
						❤️</a>
				</li>
				<li>
					<a href="/forum">{{ t('forum') }}
						💬</a>
				</li>
				<li>
					<a href="/about">{{ t('about') }}
						ℹ️</a>
				</li>
				<li>
					<a href="/logout">{{ t('logout') }}
						⏻</a>
				</li>
			</ul>
		{% else %}
			<ul class="nav-right">
				<li>
					<a href="/register">{{ t('register') }}
					</a>
				</li>
				<li>
					<a href="/login">{{ t('login') }}
					</a>
				</li>
				<li>
					<a href="/about">{{ t('about') }}
						ℹ️</a>
				</li>
			</ul>
		{% endif %}
		<button id="darkSwitch">🌙</button>
		<form method="get" action="/lang/" id="lang-switcher">
			<select name="lng" onchange="location.href='/lang/' + this.value;">
				<option value="fr" {% if lng == 'fr' %} selected {% endif %}>Français 🇫🇷</option>
				<option value="en" {% if lng == 'en' %} selected {% endif %}>English 🇬🇧</option>
				<option value="es" {% if lng == 'es' %} selected {% endif %}>Español 🇪🇸</option>
				<option value="it" {% if lng == 'it' %} selected {% endif %}>Italiano 🇮🇹</option>
			</select>
		</form>
	</nav>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
let burger = document.querySelector('.burger');
let nav = document.querySelector('.header-nav-flex');

if (burger && nav) {
burger.addEventListener('click', function (e) {
e.stopPropagation();
nav.classList.toggle('open');
});

document.addEventListener('click', function (e) {
if (nav.classList.contains('open')) {
if (! nav.contains(e.target) && ! burger.contains(e.target)) {
nav.classList.remove('open');
}
}
});
}
});
	</script>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
const darkSwitch = document.getElementById('darkSwitch');

function updateIcon() {
if (! darkSwitch) 
return;


darkSwitch.textContent = document.body.classList.contains('dark-mode') ? '☀️' : '🌙';
}

if (darkSwitch) {
if (localStorage.getItem('theme') === 'dark') {
document.body.classList.add('dark-mode');
}
updateIcon();

darkSwitch.addEventListener('click', function () {
document.body.classList.toggle('dark-mode');

const theme = document.body.classList.contains('dark-mode') ? 'dark' : 'light';
localStorage.setItem('theme', theme);
updateIcon();
});
}
});
	</script>
</header>
