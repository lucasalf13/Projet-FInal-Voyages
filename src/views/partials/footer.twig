{% block style %}
	<link rel="stylesheet" href="/assets/css/style.css"/>
{% endblock %}
<!-- Modal IA -->
<div id="modal-ia" class="modal" style="display:none;">
	<div class="modal-content">
		<div id="ia-voyage-container" style="display:block; border-radius:10px; box-shadow:0 2px 8px rgba(0,0,0,0.08); padding:24px; max-width:500px; margin:0 auto;">
			<span class="close" id="close-ia">&times;</span>
			<form id="form-ia-voyage">
				<label>{{ t('trip_type') }}
					:</label>
				<select name="type">
					<option value="plage">{{ t('beach') }}</option>
					<option value="montagne">{{ t('mountain') }}</option>
					<option value="ville">{{ t('city') }}</option>
					<option value="nature">{{ t('nature') }}</option>
				</select>
				<label>{{ t('duration_days') }}
					:</label>
				<input type="number" name="duree" min="1" max="30" required>
				<label>{{ t('number_of_people') }}</label>
				<div style="display: flex; gap: 12px;">
					<div>
						<input type="number" name="adultes" id="adultes" min="1" max="10" value="2" required>
						<label for="adultes" style="display: inline;">{{ t('adults') }}</label>
					</div>
					<div>
						<input type="number" name="enfants" id="enfants" min="0" max="10" value="0" required>
						<label for="enfants" style="display: inline;">{{ t('children') }}</label>
					</div>
				</div>
				<label>{{ t('budget_euro') }}
					:</label>
				<input type="number" name="budget" min="100" required>
				<label>{{ t('period') }}
					:</label>
				<input type="month" name="periode" required>
				<button type="submit">{{ t('suggest_trip') }}</button>
			</form>
			<div id="ia-voyage-resultat" style="margin-top:20px; display:none;"></div>
		</div>
	</div>
</div>

<!-- Modal Météo -->
<div id="modal-meteo" class="modal" style="display:none;">
	<div class="modal-content" style="max-width:800px; margin:0 auto; padding:20px;">
		<div id="carte-meteo-france" style="height: 450px;"></div>
		<span class="close" id="close-meteo">&times;</span>
	</div>
</div>


<footer class="{% if user %}footer-fixed{% endif %}">
	<nav>
		{% if user %}
			<ul class="footer-nav">
				<li class="ia">
					<button id="btn-footer-ia" type="button">{{ t('customize') }}</button>
				</li>
				<li class="meteo">
					<button id="btn-footer-meteo" type="button">{{ t('weather') }}</button>
				</li>
			</ul>
		{% else %}
			<p>{{ t('copyright') }}</p>
		{% endif %}
	</nav>
	<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
	<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
const btnIA = document.getElementById('btn-footer-ia');
const modalIA = document.getElementById('modal-ia');
const closeIA = document.getElementById('close-ia');

const btnMeteo = document.getElementById('btn-footer-meteo');
const modalMeteo = document.getElementById('modal-meteo');
const closeMeteo = document.getElementById('close-meteo');

const villes = [
{
nom: "Paris",
lat: 48.8566,
lon: 2.3522
},
{
nom: "Marseille",
lat: 43.2965,
lon: 5.3698
},
{
nom: "Lyon",
lat: 45.7640,
lon: 4.8357
},
{
nom: "Toulouse",
lat: 43.6047,
lon: 1.4442
}, {
nom: "Nice",
lat: 43.7102,
lon: 7.2620
}, {
nom: "Nantes",
lat: 47.2184,
lon: -1.5536
}, {
nom: "Strasbourg",
lat: 48.5734,
lon: 7.7521
}, {
nom: "Montpellier",
lat: 43.6119,
lon: 3.8777
}, {
nom: "Bordeaux",
lat: 44.8378,
lon: -0.5792
}, {
nom: "Lille",
lat: 50.6292,
lon: 3.0573
}, {
nom: "Rennes",
lat: 48.1173,
lon: -1.6778
}, {
nom: "Reims",
lat: 49.2583,
lon: 4.0317
}, {
nom: "Le Havre",
lat: 49.4944,
lon: 0.1079
}, {
nom: "Saint-Étienne",
lat: 45.4397,
lon: 4.3872
}, {
nom: "Grenoble",
lat: 45.1885,
lon: 5.7245
}, {
nom: "Dijon",
lat: 47.3220,
lon: 5.0415
}, {
nom: "Nîmes",
lat: 43.8367,
lon: 4.3601
}, {
nom: "Clermont-Ferrand",
lat: 45.7772,
lon: 3.0870
}, {
nom: "Brest",
lat: 48.3904,
lon: -4.4861
}, {
nom: "Limoges",
lat: 45.8336,
lon: 1.2611
}, {
nom: "Tours",
lat: 47.3941,
lon: 0.6848
}, {
nom: "Amiens",
lat: 49.8950,
lon: 2.3023
}, {
nom: "Perpignan",
lat: 42.6887,
lon: 2.8948
}, {
nom: "Metz",
lat: 49.1193,
lon: 6.1757
}, {
nom: "Ajaccio",
lat: 41.9192,
lon: 8.7386
}, {
nom: "Biarritz",
lat: 43.4832,
lon: -1.5586
}, {
nom: "Caen",
lat: 49.1829,
lon: -0.3707
}, {
nom: "La Rochelle",
lat: 46.1603,
lon: -1.1511
}
];

// Gestion ouverture modal IA
btnIA.addEventListener('click', () => {
modalIA.style.display = 'flex';
});
closeIA.addEventListener('click', () => {
modalIA.style.display = 'none';
});
modalIA.addEventListener('click', e => {
if (e.target === modalIA) {
modalIA.style.display = 'none';
}
});

// Gestion ouverture modal Météo
let mapLoaded = false;
let map;

btnMeteo.addEventListener('click', () => {
modalMeteo.style.display = 'flex';

if (! mapLoaded) {
map = L.map('carte-meteo-france').setView([
46.603354, 1.888334
], 6);
const franceBounds = [
[
41.0, -5.5
],
[
51.5, 9.5
]
];
map.setMaxBounds(franceBounds);
map.on('drag', () => map.panInsideBounds(franceBounds, {animate: false}));
map.setMinZoom(5.5);
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {attribution: '© OpenStreetMap contributors'}).addTo(map);

villes.forEach(ville => {
fetch(`/api/meteo/${
ville.lat
}/${
ville.lon
}`).then(r => r.json()).then(data => {
if (data.forecast && data.forecast.forecastday.length > 1) {
const today = data.forecast.forecastday[0];
const tomorrow = data.forecast.forecastday[1];
const iconUrl = "https:" + today.day.condition.icon;
const popup = `
                <b>${
ville.nom
}</b><br>
                <img src="${iconUrl}" style="vertical-align:middle;"><br>
                <strong>Aujourd'hui :</strong> ${
today.day.condition.text
}, ${
today.day.avgtemp_c
}°C<br>
                <strong>Demain :</strong> ${
tomorrow.day.condition.text
}, ${
tomorrow.day.avgtemp_c
}°C
              `;
const meteoIcon = L.icon({
iconUrl: iconUrl,
iconSize: [
48, 48
],
iconAnchor: [
24, 24
],
popupAnchor: [0, -24]
});
L.marker([
ville.lat, ville.lon
], {icon: meteoIcon}).addTo(map).bindPopup(popup);
}
});
});
mapLoaded = true;
setTimeout(() => {
map.invalidateSize();
}, 200);
} else {
setTimeout(() => {
map.invalidateSize();
}, 200);
}
});
closeMeteo.addEventListener('click', () => {
modalMeteo.style.display = 'none';
});
modalMeteo.addEventListener('click', e => {
if (e.target === modalMeteo) {
modalMeteo.style.display = 'none';
}
});

// Gestion formulaire IA
const formIA = document.getElementById('form-ia-voyage');
if (formIA) {
formIA.addEventListener('submit', function (e) {
e.preventDefault();
const data = {
type: formIA.type.value,
duree: formIA.duree.value,
adultes: formIA.adultes.value,
enfants: formIA.enfants.value,
budget: formIA.budget.value,
periode: formIA.periode.value
};
const resultatDiv = document.getElementById('ia-voyage-resultat');
resultatDiv.style.display = 'block';
resultatDiv.innerHTML = `<span class="ia-loading"> {{ t('search_in_progress') }} </span>`;
fetch('/api/ia-voyage', {
method: 'POST',
headers: {
'Content-Type': 'application/json'
},
body: JSON.stringify(data)
}).then(r => r.json()).then(result => {
const resultatDiv = document.getElementById('ia-voyage-resultat');
resultatDiv.style.display = 'block';
resultatDiv.innerHTML = result.proposition ? `<div class="ia-proposition">${
result.proposition
}</div>` : `{{ t('no_proposal_found') }}`;
});

});
}
});
	</script>
</footer>
