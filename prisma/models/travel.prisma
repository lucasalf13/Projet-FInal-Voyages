model Travel {
    id             Int             @id @default(autoincrement())
    name           String          @unique
    photos         String          @db.Text
    photoCaptions  Json?
    destination    String
    favorisDe      User[]          @relation("Favoris")
    accommodations Accommodation[]
    restaurants    Restaurant[]
    itineraries    Itinerary[]
    transports     Transport[]
}

enum PriceCategory {
  EURO        // €
  TWO_EURO    // €€
  THREE_EURO  // €€€
}